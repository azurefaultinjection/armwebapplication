@using Microsoft.Azure.Management.ResourceManager.Fluent.Core;
<form id="myWizard" type="get" class="form-horizontal easyWizardElement easyPager" method="post">
  <section class="step" data-step-title="Authenticate" id="authenticate">
    <div class="panel-collapse collapse in">
      <div class="panel-body">
        <div class="control-group">
          <label class="control-label" for="inputTenantId">
            TenantId
            <span style="color: red;"> *</span>
          </label>
          <div class="controls">
            <input name="microsoft.chaos.client.tenant.id" type="text" id="inputTenantId" placeholder="Enter tenant id" class="input-xlarge">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputClientId">
            Client Id
            <span style="color: red;"> *</span>
          </label>
          <div class="controls">
            <input type="text" name="microsoft.chaos.client.id"  id="inputClientId" placeholder="Enter client id" class="input-xlarge">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputClientSecret">
            Client Secret
            <span style="color: red;"> *</span>
          </label>
          <div class="controls">
            <input type="text" id="inputClientSecret" name="microsoft.chaos.client.secretKey" placeholder="Enter client secret" class="input-xlarge">
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="step" data-step-title="Resource Selection">
    <div class="panel-collapse collapse in">
      <div class="panel-body">
        <div class="control-group">
          <label class="control-label" for="selectSubscription">
            Subscription
            <span style="color: red;"> *</span>
          </label>
          <div class="controls">
            <select class="dropdown" id="selectSubscription" name="microsoft.chaos.client.subscription.id"></select>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="region">
            Resource Group Region
            <span style="color: red;"> *</span>
          </label>
          <div class="controls">
            <select id="region" name="microsoft.chaos.client.region">
              @foreach (var region in Region.Values)
              {
                  <option value="@region.Name">@region.Name</option>
              }
            </select>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="excludedResourceGroups" >Excluded ResourceGroups</label>
            <div class="controls">
              
                <select id="excludedResourceGroups" multiple="multiple" name="microsoft.chaos.blackListedResourceGroups">
                </select>
            </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="includedResourceGroups">Included ResourceGroups</label>
          <div class="controls">
              <select id="includedResourceGroups" multiple="multiple" name="microsoft.chaos.inclusiveOnlyResourceGroups">
                  
              </select>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="step" data-step-title="Frequency Selection">
    <div class="panel-collapse collapse in">
      <div class="panel-body">
        <div class="control-group">
          <label class="control-label" for="schedulerFrequency">Scheduler Frequency in Minutes</label>
          <div class="controls">
            <input type="number" name="microsoft.chaos.scheduler.frequency" id="schedulerFrequency" value="60" />
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="rollbackFrequency">Rollback Frequency in Minutes</label>
          <div class="controls">
            <input type="number" name="microsoft.chaos.rollback.frequency" id="rollbackFrequency" value="30" />
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="triggerFrequency">Trigger Frequency in Minutes</label>
          <div class="controls">
            <input type="number" name="microsoft.chaos.trigger.frequency" id="triggerFrequency" value="2" />
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="crawlerFrequency">Crawler Frequency in Minutes</label>
          <div class="controls">
            <input type="number" name="microsoft.chaos.crawler.frequency" id="crawlerFrequency" value="15" />
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="meanTime">Meantime between kills in Minutes</label>
          <div class="controls">
            <input type="number" name="microsoft.chaos.meantime" id="meanTime" value="120" />
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="step" data-step-title="Settings Selection">
    <div class="panel panel-default" style="overflow:visible;">
      <div class="panel-heading">
        <h4 class="panel-title">Virtual Machine</h4>
      </div>
      <div class="panel-collapse collapse in">
        <div class="panel-body">
          <div class="control-group">
            <label class="control-label" for="isVmEnabled">Enable</label>
            <div class="controls">
              <input type="checkbox" name="microsoft.chaos.VM.enabled" id="isVmEnabled" />
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="vmTerminationPercentage">Termination(%)</label>
            <div class="controls">
              <input type="number" name="microsoft.chaos.singleInstanceVm.percentageTermination" id="vmTerminationPercentage" value="50" />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel panel-default" style="overflow:visible;">
      <div class="panel-heading">
        <h4 class="panel-title">Availability Set</h4>
      </div>
      <div class="panel-collapse collapse in">
        <div class="panel-body">
          <div class="control-group">
            <label class="control-label" for="avSetsEnabled">Enable</label>
            <div class="controls">
              <input type="checkbox" name="microsoft.chaos.AS.enabled" id="avSetsEnabled" />
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="faultDomain">Enable Fault Domain</label>
            <div class="controls">
              <input type="radio"  name="microsoft.chaos.AS.domain" id="faultDomain" />
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="updateDomain">Enable Update Domain</label>
            <div class="controls">
              <input type="radio"  name="microsoft.chaos.AS.domain" id="updateDomain" />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel panel-default" style="overflow:visible;">
      <div class="panel-heading">
        <h4 class="panel-title">Availability Zone</h4>
      </div>
      <div class="panel-collapse collapse in">
        <div class="panel-body">
          <div class="control-group">
            <label class="control-label" for="isAvZonesEnabled">Enable</label>
            <div class="controls">
              <input type="checkbox" name="microsoft.chaos.AZ.enabled" id="isAvZonesEnabled" />
            </div>
          </div>
          <div class="control-group hide">
            <label class="control-label" for="avZoneRegions">Zone Regions</label>
            <div class="controls">
              <select id="avZoneRegions"></select>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel panel-default" style="overflow:visible;">
      <div class="panel-heading">
        <h4 class="panel-title">Virtual Machine Scale Set</h4>
      </div>
      <div class="panel-collapse collapse in">
        <div class="panel-body">
          <div class="control-group">
            <label class="control-label" for="vmssEnabled">Enable</label>
            <div class="controls">
              <input type="checkbox" name="microsoft.chaos.SS.enabled" id="vmssEnabled" />
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="vmssTerminationPercentage">Termination(%)</label>
            <div class="controls">
              <input type="number" name="microsoft.chaos.SS.percentageTermination" id="vmssTerminationPercentage" value="50" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</form>