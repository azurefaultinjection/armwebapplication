
@using Microsoft.Azure.Management.ResourceManager.Fluent.Core;
<form id="myWizard" class="form-horizontal easyWizardElement easyPager" method="post">
  <section class="step" data-step-title="Authenticate" id="authenticate">
    <div class="panel-collapse collapse in">
      <div class="panel-body">
        <div class="control-group">
          <label class="control-label" for="inputTenantId">
            TenantId
            <span style="color: red;"> *</span>
          </label>
          <div class="controls">
            <input name="tenantId" type="text" id="inputTenantId" placeholder="Enter tenant id" 
                   class="input-xlarge" title="tenant id enter">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputClientId">
            Client Id
            <span style="color: red;"> *</span>
          </label>
          <div class="controls">
            <input type="text" name="clientId" id="inputClientId" placeholder="Enter client id" class="input-xlarge">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputClientSecret">
            Client Secret
            <span style="color: red;"> *</span>
          </label>
          <div class="controls">
            <input type="text" id="inputClientSecret" name="clientSecret" placeholder="Enter client secret" class="input-xlarge">
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="step" data-step-title="Resource Selection">
    <div class="panel-collapse collapse in">
      <div class="panel-body">
        <div class="control-group">
          <label class="control-label" for="selectSubscription">
            Subscription
            <span style="color: red;"> *</span>
          </label>
          <div class="controls">
            <select class="dropdown" id="selectSubscription" name="subscription"></select>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="region">
            Resource Group Region
            <span style="color: red;"> *</span>
          </label>
          @*<div class="controls">
            <select id="region" name="region">
              @foreach (var region in Region.Values)
              {
                <option value="@region.Name">@region.Name</option>
              }
            </select>
          </div>*@
        </div>
        <div class="control-group">
          <label class="control-label" for="excludedResourceGroups">Excluded ResourceGroups</label>
          <div class="controls">
            <select id="excludedResourceGroups" multiple="multiple" name="excludedResourceGroups"></select>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="includedResourceGroups">Included ResourceGroups</label>
          <div class="controls">
            <select id="includedResourceGroups" multiple="multiple" name="includedResourceGroups"></select>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="step" data-step-title="Settings Selection">
    <div class="panel panel-default" style="overflow:visible;">
      <div class="panel-heading">
        <h4 class="panel-title">Virtual Machine</h4>
      </div>
      <div class="panel-collapse collapse in">
        <div class="panel-body">
          <div class="control-group">
            <label class="control-label" for="isVmEnabled">Enable</label>
            <div class="controls">
              <input type="checkbox" name="isVmEnabled" id="isVmEnabled" />
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="vmTerminationPercentage">Termination(%)</label>
            <div class="controls">
              <input type="number" name="vmPercentage" id="vmTerminationPercentage" value="50" />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel panel-default" style="overflow:visible;">
      <div class="panel-heading">
        <h4 class="panel-title">Availability Set</h4>
      </div>
      <div class="panel-collapse collapse in">
        <div class="panel-body">
          <div class="control-group">
            <label class="control-label" for="avSetsEnabled">Enable</label>
            <div class="controls">
              <input type="checkbox" name="isAvSetEnabled" id="avSetsEnabled" />
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="faultDomain">Enable Fault Domain</label>
            <div class="controls">
              <input type="radio" name="isFaultDomainEnabled" id="faultDomain" />
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="updateDomain">Enable Update Domain</label>
            <div class="controls">
              <input type="radio" name="isUpdateDomainEnabled" id="updateDomain" />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel panel-default" style="overflow:visible;">
      <div class="panel-heading">
        <h4 class="panel-title">Availability Zone</h4>
      </div>
      <div class="panel-collapse collapse in">
        <div class="panel-body">
          <div class="control-group">
            <label class="control-label" for="isAvZonesEnabled">Enable</label>
            <div class="controls">
              <input type="checkbox" name="isAvZoneEnabled" id="isAvZonesEnabled" />
            </div>
          </div>
          <div class="control-group hide">
            <label class="control-label" for="avZoneRegions">Zone Regions</label>
            <div class="controls">
              <select id="avZoneRegions" name="avZoneRegions"></select>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel panel-default" style="overflow:visible;">
      <div class="panel-heading">
        <h4 class="panel-title">Virtual Machine Scale Set</h4>
      </div>
      <div class="panel-collapse collapse in">
        <div class="panel-body">
          <div class="control-group">
            <label class="control-label" for="vmssEnabled">Enable</label>
            <div class="controls">
              <input type="checkbox" name="isVmssEnabled" id="vmssEnabled" />
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="vmssTerminationPercentage">Termination(%)</label>
            <div class="controls">
              <input type="number" name="vmssPercentage" id="vmssTerminationPercentage" value="50" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="step" data-step-title="Frequency Selection">
    <div class="panel-collapse collapse in">
      <div class="panel-body">
        <div class="control-group">
          <label class="control-label" for="isChaosEnabled">Enable Azure Fault Injection</label>
          <div class="controls">
            <input type="checkbox" name="isChaosEnabled" id="isChaosEnabled" />
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="schedulerFrequency">Scheduler Frequency in Minutes</label>
          <div class="controls">
            <input type="number" name="schedulerFrequency" id="schedulerFrequency" value="60"/>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="rollbackFrequency">Rollback Frequency in Minutes</label>
          <div class="controls">
            <input type="number" name="rollbackFrequency" id="rollbackFrequency" value="30"/>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="triggerFrequency">Trigger Frequency in Minutes</label>
          <div class="controls">
            <input type="number" name="triggerFrequency" id="triggerFrequency" value="2"/>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="crawlerFrequency">Crawler Frequency in Minutes</label>
          <div class="controls">
            <input type="number" name="crawlerFrequency" id="crawlerFrequency" value="15"/>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="meanTime">Meantime between kills in Minutes</label>
          <div class="controls">
            <input type="number" name="meanTime" id="meanTime" value="120"/>
          </div>
        </div>
      </div>
    </div>
  </section>
</form>